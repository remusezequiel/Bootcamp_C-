@using CodigoComun.Modelo;
@model IEnumerable<Articulo>;
@{}
<div class="container">
    <h1 class="display-1 text-dark">
        Index <small class="text-white bg-primary bg-opacity-35">Articulos</small> 
    </h1>
    <br/><br/>
  
    <table class="table table-striped">
        <thead class="text-white text-center">
        <tr>
            <th class="bg-dark" scope="col">Id</th>
            <th class="bg-primary"scope="col">Nombre</th>
            <th class="bg-dark" scope="col">Marca</th>
            <th class="bg-primary"scope="col">Proovedor</th>
            <th class="bg-dark"scope="col">MinimoStock</th>
            <th class="bg-primary"scope="col">Codigo</th>
        </tr>
        </thead>
        @foreach (var i in Model)
        {
            <tbody class="text-center">
            <tr>
                <th class="bg-light p-2 text-dark bg-opacity-75" scope="row">@i.Id</th>
                <td class="bg-primary p-2 text-white bg-opacity-50">@i.Nombre</td>
                <td class="bg-light p-2 text-dark bg-opacity-50">@i.Marca</td>
                <td class="bg-primary p-2 text-white bg-opacity-50">@i.Proveedor</td>
                <td class="bg-light p-2 text-dark bg-opacity-50">@i.MinimoStock</td>
                <td class="bg-primary p-2 text-white bg-opacity-50">@i.Codigo</td>
            </tr>
            </tbody>
        }
    </table>
</div>
