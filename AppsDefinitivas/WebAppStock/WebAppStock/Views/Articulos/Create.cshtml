@{
}
@model ArticuloDTO;
<h1 class="display-4"> Crear  <small class="text-white bg-primary bg-opacity-35">Articulo</small> </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control"  />
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Marca</label>
                <input asp-for="Marca" class="form-control"  />
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Precio</label>
                <input asp-for="Precio" class="form-control"  />
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Proveedor</label>
                <input asp-for="Proveedor" class="form-control"  />
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Minimo Stock</label>
                <input asp-for="MinimoStock" class="form-control"  />
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Código</label>
                <input asp-for="Codigo" class="form-control"  />
            </div>
            <br>
            <br>
         <div class="form-group">
           <input type="submit" value="Guardar" class="btn btn-primary" />
           
       </div>           
        </form>
    </div>
</div>
@if (Model.HuboError == true)
{
    <label class="text-danger">@ViewBag.Mensaje</label>
}
else
{
    <label class="text-success">@ViewBag.Mensaje</label>
}
<br>
<div>
    <a asp-action="Index">Volver</a>
</div>
