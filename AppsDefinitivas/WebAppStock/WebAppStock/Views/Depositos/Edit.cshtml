@{
}
@using CodigoComun.Entities.DTO;
@model DepositoDTO;
<h1 class="display-4"> Modificar  <small class="text-white bg-secondary bg-opacity-35">Depositos</small> </h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <!--

            <input type="hidden" asp-for="Capacidad">  </input>
            --> 

            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Capacidad</label>
                <input asp-for="Capacidad" class="form-control"  />
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Dirección</label>
                <input asp-for="Direccion" class="form-control"  />
            </div>
            <br>
            <br>
         <div class="form-group">
           <input type="submit" value="Guardar" class="btn btn-primary" />
         </div>           
        </form>
    </div>
</div>
@if (Model.HuboError == true)
{
    <label class="text-danger">@ViewBag.Mensaje</label>
}
else
{
    <label class="text-success">@ViewBag.Mensaje</label>
}
<br>
<div>
    <a asp-action="Index">Volver</a>
</div>
